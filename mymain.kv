WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:2
        Button:
            text: "1 screen"
        Button:
            text: "2 screen"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"

        ScrollView:
            GridLayout:
                cols: 3
                Label:
                    text: 'Ваше Растение'
                TextInput:
                    id: plant_input
                    text: 'Введите Название Растения'
                    on_text: root.suggestion()
                Label:
                    id: suggestion_label
                    text: 'Возможно вы ищете:'

                Label:
                    id: selected_options_label
                    text: 'Selected options: '
                BoxLayout:
                    id: button_box
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: '40dp'
                    # Create buttons to open popups
                    on_parent: root.create_buttons()
                BoxLayout:
                    id: popup_box
                    size_hint: None, None
                    size: 200, 200
                    # Create popups
                    on_parent: root.create_popups()
