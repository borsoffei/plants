<SecondWindow>:
    name: "second"

    GridLayout:
        cols: 2
        Button:
            text: "1 screen"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"

        Button:
            text: "2 screen"

        ScrollView:

            GridLayout:
                cols: 1
                Label:
                    text: "2 screen here"